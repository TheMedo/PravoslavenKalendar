<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/panel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:overlay="true"
    sothree:shadowHeight="0dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_size_half"
            android:background="@color/white_semi_transparent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_normal"
                android:text="@string/placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:id="@+id/text_old_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="italic"/>

            <include layout="@layout/item_day_of_week"/>

            <com.medo.pravoslavenkalendar.views.FadeInTextView
                android:id="@+id/text_holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:padding="@dimen/padding_normal"
                android:text="@string/placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_header"
            android:background="@color/white_semi_transparent"
            android:gravity="center"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/text_fasting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_items"
            android:background="@color/white_semi_transparent"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <LinearLayout
            android:id="@+id/linear_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_fasting"
            android:background="@color/white_semi_transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal">

            <ImageButton
                android:id="@+id/image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_normal"
                android:src="@drawable/ic_action_calendar"/>

            <ImageButton
                android:id="@+id/image_fasting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_normal"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_normal"
                android:src="@drawable/ic_action_fasting"/>

            <ImageButton
                android:id="@+id/image_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_normal"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_normal"
                android:src="@drawable/ic_action_wallpaper"/>

            <ImageButton
                android:id="@+id/image_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_normal"
                android:src="@drawable/ic_action_settings"/>
        </LinearLayout>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:src="@drawable/ic_action_favorite_outline"/>
    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
